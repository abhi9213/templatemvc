    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />


    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />

    <link href="~/Content/css/startmin.css" rel="stylesheet" />

    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />


</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                        {
                        <fieldset>
                            <div>@TempData["invalid"]</div>
                            <div class="error">@TempData["wr pass"]</div>

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Email", @required = "required", data_rule_required = "true" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "error text-danger", })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.pass, new
                           {
                               @class = "form-control",
                                    @placeholder = "password",
                                    @required = "required",
                                    data_rule_required = "true"
                                })
                                @Html.ValidationMessageFor(m => m.pass, "", new { @class = "error", })
                            </div>



                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <button type="submit" class="btn btn-success">LOGIN</button>


                        </fieldset>

                                @*<a href="index.html" class="btn btn-lg btn-success btn-block">Login</a>*@
                            
                        }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    @*<script src="../js/jquery.min.js"></scrip<!--t>-->

        <!-- Bootstrap Core JavaScript -->
        <!--<script src="../js/bootstrap.min.js"></script>-->*@

    <!-- Metis Menu Plugin JavaScript -->
    <!--<script src="../js/metisMenu.min.js"></script>-->
    <!-- Custom Theme JavaScript -->
    <!--<script src="../js/startmin.js"></script>-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jqueryval")


    <script src="~/Scripts/js/jquery.min.js"></script>
        <script src="~/Scripts/js/bootstrap.min.js"></script>
        <script src="~/Scripts/js/metisMenu.min.js"></script>
        <script src="~/Scripts/js/startmin.js"></script>
</body>